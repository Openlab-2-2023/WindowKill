{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "windowkill",
    "version": "0.6.0",
    "identifier": "com.windowkill.app",
    "build": {
        "frontendDist": "../src"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "windowkill",
                "width": 600,
                "height": 600,
                "resizable": false,
                "maximizable": false,
                "fullscreen": false,
                "center": true,
                "decorations": false,
                "transparent": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
        "windows": {
            "nsis": {
                "installMode": "currentUser"
            }
        }
    }
}
